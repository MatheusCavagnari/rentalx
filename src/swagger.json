    "paths": {
        "/categories": {
            "post": {
                "tag" : ["Category"],
                "summary": "Create a category",
                "description": "Create a new category",
                "requestBody":{
                    "content":{
                        "aplication/json":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "description":{
                                        "type":"string"
                                    }
                                },
                                "example":{
                                    "name":"CategoryTest",
                                    "description": "Create a new category"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201":{
                        "description": "Created"
                    },
                    "500":{
                        "description": "Category already exist"
                    }
                    
                }
            },
            "get":{
                "tag" : ["Category"],
                "summary": "List all categories",
                "description": "List all categories",
                "responses":{
                    "200": {
                        "description": "Success",
                        "content":{
                            "aplication/json":{
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description":{
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}